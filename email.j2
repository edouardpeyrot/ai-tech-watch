<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{ subject|e }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body style="font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif;line-height:1.6;background:#0b1220;color:#e6e8ec;margin:0;padding:24px">
  <div style="max-width:860px;margin:0 auto;background:#0f172a;border:1px solid #1f2a44;border-radius:14px;overflow:hidden;box-shadow:0 10px 30px rgba(2,6,23,0.5)">

    <!-- Header -->
    <div style="padding:24px 28px;border-bottom:1px solid #1f2a44;background:linear-gradient(180deg,rgba(59,130,246,0.12),rgba(59,130,246,0))">
      <h1 style="margin:0;font-size:22px;line-height:1.25;color:#f1f5f9">{{ subject|e }}</h1>
      <p style="margin:6px 0 0 0;color:#94a3b8;font-size:12px">
        {% if week %}Week {{ week|e }} ‚Ä¢ {% endif %}Generated on {{ generated_at|e }}
      </p>
    </div>

    <!-- Banner -->
    {% if image %}
    <div style="margin:0 -28px 0 -28px">
      <img src="cid:{{ image }}" alt="banner" style="width:100%;max-height:220px;object-fit:cover;display:block;border-bottom:1px solid #1f2a44">
    </div>
    {% endif %}

    <!-- Body -->
    <div style="padding:24px 28px">

      {# Section macro #}
      {% macro section_block(title, icon, summary, items) -%}
      {% if summary or (items and items|length) %}
      <section style="margin:22px 0 0 0">
        <div style="display:flex;align-items:center;margin:0 0 10px 0">
          <span style="font-size:18px;margin-right:8px">{{ icon }}</span>
          <h2 style="margin:0;font-size:18px;line-height:1.3;color:#e2e8f0">{{ title|e }}</h2>
        </div>
        <div style="background:#0b1220;border:1px solid #1f2a44;border-radius:12px;padding:14px">
          {% if summary %}
          <p style="margin:0 0 12px 0;color:#cbd5e1">{{ summary|e }}</p>
          {% endif %}
          {% if items and items|length %}
          <ul style="list-style:none;padding:0;margin:0">
            {% for it in items %}
            <li style="margin:0 0 12px 0;padding:12px;border:1px solid #1f2a44;border-radius:10px;background:#0b1220">
              {% if it.image %}
              <div style="margin:0 0 10px 0">
                <img src="cid:{{ it.image|e }}" alt="" style="max-width:100%;height:auto;border-radius:8px;border:1px solid #1f2a44">
              </div>
              {% endif %}
              <div style="font-weight:600;color:#e5e7eb;margin-bottom:4px">{{ (it.title or 'Untitled')|e }}</div>
              {% set meta = [] %}
              {% if it.source %}{% set _ = meta.append(it.source) %}{% endif %}
              {% if it.date %}{% set _ = meta.append(it.date) %}{% endif %}
              {% if meta|length %}
              <div style="color:#94a3b8;font-size:12px;margin-bottom:6px">{{ meta|join(' ‚Ä¢ ')|e }}</div>
              {% endif %}
              {% if it.summary %}
              <div style="color:#cbd5e1">{{ it.summary|e }}</div>
              {% endif %}
            </li>
            {% endfor %}
          </ul>
          {% endif %}
        </div>
      </section>
      {% endif %}
      {%- endmacro %}

      {{ section_block("Technologies", "üíª", (technologies.summary if technologies else None), (technologies.details if technologies else None)) }}
      {{ section_block("Business", "üè¢", (business.summary if business else None), (business.details if business else None)) }}

      {% if not (technologies and technologies.summary or (technologies and technologies.details) or business and business.summary or (business and business.details)) %}
      <p style="color:#94a3b8">No content.</p>
      {% endif %}
    </div>

    <!-- Footer -->
    <div style="padding:16px 28px;border-top:1px solid #1f2a44;color:#94a3b8;font-size:12px">
      Sent automatically ‚Ä¢ {{ generated_at|e }}
    </div>
  </div>
</body>
</html>